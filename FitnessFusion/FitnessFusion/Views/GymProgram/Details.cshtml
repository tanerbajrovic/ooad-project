@model FitnessFusion.Models.GymProgram

@{
    ViewData["Title"] = "Details";
}

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #333;
        }

        .category {
            color: #777;
            font-style: italic;
        }

        .description {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>@Model.Name</h1>
    <p class="category">Category: @Model.Type</p>
    <div class="description">
        <p>@Html.Raw(Model.Description)</p>
    </div>
</body>
<div>
    <a asp-action="Index">Programi Aktivnosti</a>
    @if (User.IsInRole("User"))
    {
        <a asp-action="AddToUser" asp-route-programId="@Model.Id">Add Program</a>
    }
</div>
